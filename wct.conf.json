{
  "root": "./",
  "suites": ["./test/index.html"],
  "verbose": true,
  "plugins": {
    "local": {
      "browsers": ["chrome"],
      "disabled": false,
      "skipSeleniumInstall": true
    },
    "istanbulcoverage": {
      "dir": "./coverage",
      "reporters": ["text-summary", "lcov"],
      "include": ["**/test/thoughts-wc-test_test.html"],
      "exclude": ["**/node_modules/**"],
      "thresholds": {
        "global": {
          "statements": 80,
          "branches": 80,
          "functions": 90,
          "lines": 80
        }
      }
    }
  }
}
